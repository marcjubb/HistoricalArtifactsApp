<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/artifact_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:contentDescription="@string/artifact_image" />

    <TextView
        android:id="@+id/artifact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/artifact_name"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/artifact_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/artifact_description"
        android:textColor="#000000" />

    <Button
        android:id="@+id/request_edit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/request_an_edit"
        android:textSize="16sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/edit_artifact"
        android:textSize="16sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/delete_artifact"
        android:textSize="16sp"
        android:visibility="gone" />

</LinearLayout>
