<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/login_back">

    <ImageView
        android:id="@+id/artifact_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/artifact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artifact Name"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/artifact_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artifact Description" />

    <Button
        android:id="@+id/request_edit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Request an edit"
        android:textSize="16sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Edit Artifact"
        android:textSize="16sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Delete Artifact"
        android:textSize="16sp"
        android:visibility="gone" />

</LinearLayout>
